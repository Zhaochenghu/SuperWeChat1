<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_cart_R"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <CheckBox
        android:id="@+id/cb_cart_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomCheckboxTheme"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:checked="true" />
    <ImageView
        android:id="@+id/iv_cart_thumb"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_toRightOf="@id/cb_cart_selected"
        android:src="@drawable/goods_thumb"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_cart_good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="衬衣衬衣衬衣衬衣衬衣衬衣"
        android:layout_toRightOf="@id/iv_cart_thumb"
        android:lines="1"
        android:ellipsize="end"
        android:paddingRight="60dp"
        android:layout_marginTop="5dp"
        android:textColor="#f90"
        android:textSize="18sp" />
    <ImageView
        android:id="@+id/iv_cart_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_cart"
        android:layout_below="@+id/tv_cart_good_name"
        android:layout_toRightOf="@id/iv_cart_thumb"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_cart_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(4)"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/wallet_base_blue"
        android:layout_below="@+id/tv_cart_good_name"
        android:layout_toRightOf="@+id/iv_cart_add"
        />
    <ImageView
        android:id="@+id/iv_cart_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/del_cart"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/tv_cart_good_name"
        android:layout_toRightOf="@+id/tv_cart_count"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_cart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="¥166.66"
        android:textColor="@color/orange"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"/>
</RelativeLayout>
